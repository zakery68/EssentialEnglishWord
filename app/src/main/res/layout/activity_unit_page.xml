<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_image"
    android:padding="10dp"
    tools:context=".UnitPage">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

    <ImageView
        android:id="@+id/imageUnit"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:transitionName="transitionImage"
        android:src="@drawable/sample_image"
        />
    </androidx.cardview.widget.CardView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonWords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        app:icon="@android:drawable/btn_star_big_on"
        android:text="Words"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/design_button"
        app:layout_constraintBottom_toTopOf="@id/buttonStory"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonStory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        app:icon="@android:drawable/btn_star_big_on"
        android:text="Story"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/design_button"
        app:layout_constraintBottom_toTopOf="@id/buttonExercise"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="80dp"
        app:icon="@android:drawable/btn_star_big_on"
        android:textColor="@color/white"
        android:text="Exercise"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/design_button"
        app:layout_constraintBottom_toBottomOf="parent"/>


