<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootItemView"
    tools:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <ImageView
        android:id="@+id/pictureUnit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/lion"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:transitionName="transitionImage"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/pageNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="#88878483"
        android:textSize="200sp"
        app:layout_constraintLeft_toLeftOf="@id/pictureUnit"
        app:layout_constraintTop_toTopOf="@id/pictureUnit"
        app:layout_constraintRight_toRightOf="@id/pictureUnit"
        app:layout_constraintBottom_toBottomOf="@id/pictureUnit"/>
    <TextView
        android:id="@+id/textUnit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Unit 1 : Lion"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:gravity="center_vertical"

        app:layout_constraintTop_toBottomOf="@id/pictureUnit"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/textUnit"/>

</androidx.constraintlayout.widget.ConstraintLayout>